<?xml version="1.0" encoding="utf-8"?>
<window type="dialog">
	<allowoverlay>no</allowoverlay>
	<defaultcontrol always="false">4301</defaultcontrol>
        <zorder>100</zorder>
	<coordinates>
		<posx>300</posx>
		<posy>235</posy>
	</coordinates>
    <animation effect="fade" start="0" end="100" time="500">WindowOpen</animation>
    <animation effect="fade" start="100" end="0" time="500">WindowClose</animation>
    <controls>

        <control type="image">
            <posx>0</posx>
            <posy>0</posy>
            <width>680</width>
            <height>260</height>
            <texture>tvcatchup-dialog.png</texture>
        </control>

        <control type="label" id="4302">
            <description>Title Label</description>
            <posx>0</posx>
            <posy>5</posy>
            <width>680</width>
            <height>24</height>
            <textcolor>ffffffff</textcolor>
            <font>font13</font>
            <align>center</align>
            <aligny>center</aligny>
            <label>Error:- You Broke Something!</label>
        </control>	  
        <control type="textbox" id="4303">
            <description>Main Text</description>
            <posx>12</posx>
            <posy>36</posy>
            <width>465</width>
            <height>170</height>
            <textcolor>ffffffff</textcolor>
            <font>font13</font>
            <wrapmultiline>true</wrapmultiline>
            <align>center</align>
            <autoscroll time="3600" delay="6000" repeat="6000">true</autoscroll>        
        </control>
	  <control type="image" id="4305">
            <description>Icon</description>
            <posx>485</posx>
            <posy>40</posy>
            <width>180</width>
            <height>160</height>
            <aspectratio>keep</aspectratio>
            <fadetime>500</fadetime>
	    <texture>red-tvcatchup-logo.png</texture>
        </control>
        <control type="button" id="4301">
            <posx>75</posx>
            <posy>210</posy>
            <width>250</width>
            <height>40</height>
            <texturefocus>red-tvcatchup-normal-program-focus.png</texturefocus>
            <texturenofocus>red-tvcatchup-normal-program.png</texturenofocus>
            <onleft>4304</onleft>
            <onright>4304</onright>
            <align>center</align>
            <aligny>center</aligny>
            <font>font13</font>
            <textcolor>ffffffff</textcolor>
            <visible>true</visible>
            <label>Yes</label>
        </control>

        <control type="button" id="4304">
            <posx>375</posx>
            <posy>210</posy>
            <width>250</width>
            <height>40</height>
            <texturefocus>red-tvcatchup-normal-program-focus.png</texturefocus>
            <texturenofocus>red-tvcatchup-normal-program.png</texturenofocus>
            <onleft>4301</onleft>
            <onright>4301</onright>
            <align>center</align>
            <aligny>center</aligny>
            <font>font13</font>
            <textcolor>ffffffff</textcolor>
            <visible>true</visible>
            <label>No</label>
        </control>

        <control type="button" id="4306">
            <posx>215</posx>
            <posy>210</posy>
            <width>250</width>
            <height>40</height>
            <texturefocus>red-tvcatchup-normal-program-focus.png</texturefocus>
            <texturenofocus>red-tvcatchup-normal-program.png</texturenofocus>
            <onleft>4304</onleft>
            <onright>4304</onright>
            <align>center</align>
            <aligny>center</aligny>
            <font>font13</font>
            <textcolor>ffffffff</textcolor>
            <visible>true</visible>
            <label>Okay</label>
        </control>       
    </controls>
</window>
